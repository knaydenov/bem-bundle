{
    "name": "kna/bem-bundle",
    "description": "BEM classes generation helper",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Klim Naydenov",
            "email": "knaydenov@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "symfony/framework-bundle": ">=4.0  <5.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": ">=4.0  <5.0",
        "twig/twig": "^2.5",
        "symfony/twig-bundle": ">=4.0  <5.0",
        "symfony/yaml": ">=4.0  <5.0",
        "symfony/console": ">=4.0  <5.0"
    },
    "autoload": {
      "psr-4": {
        "Kna\\BEMBundle\\": ""
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Kna\\BEMBundle\\Tests\\App\\": "Tests/App/src/"
      }
    },
    "suggest": {
      "twig/twig": "For using template helpers"
    }
}
